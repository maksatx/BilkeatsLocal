<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0E1A91">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="195dp"
            android:layout_height="45dp"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:text="date"
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/lunchTextView"
            android:layout_width="91dp"
            android:layout_height="68dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:text="Lunch"
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/dinnerTextView"
            android:layout_width="101dp"
            android:layout_height="81dp"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center"
            android:text="Dinner"
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/lunchMealsTextView"
            android:layout_width="207dp"
            android:layout_height="141dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="TextView"
            android:textColor="#F8F2F2" />

        <TextView
            android:id="@+id/dinnerMealsTextView"
            android:layout_width="222dp"
            android:layout_height="149dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="TextView"
            android:textColor="#FFF7F7" />

        <TextView
            android:id="@+id/lunchNutrientsTextView"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="TextView"
            android:textColor="#F8EBEB" />

        <TextView
            android:id="@+id/dinnerNutrientsTxtView"
            android:layout_width="95dp"
            android:layout_height="146dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="TextView"
            android:textColor="#EADDDD" />
    </GridLayout>
</LinearLayout>
